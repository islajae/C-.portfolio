@model List<OnlineStore.Models.Product>
<h2>Products</h2>
@foreach (var product in Model)
{
    <div>
        <h3>@product.Name</h3>
        <p>@product.Description</p>
        <p>Price: $@product.Price</p>
        <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@product.Id">Add to Cart</a>
    </div>
}

@model List<OnlineStore.Models.CartItem>
<h2>Shopping Cart</h2>
@foreach (var item in Model)
{
    <div>
        <h3>@item.Product.Name</h3>
        <p>Quantity: @item.Quantity</p>
        <p>Total: $@(item.Product.Price * item.Quantity)</p>
    </div>
}
<p>Total Price: $@Model.Sum(item => item.Product.Price * item.Quantity)</p>
